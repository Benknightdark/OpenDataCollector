{
    "version": "2.0.0",
    "tasks": [
        // 清除所有daprd執行緒
        {
            "label": "clear-all-daprd-processes",
            "type": "shell",
            "isBackground": true,
            "windows": {
                "command": "Get-Process -Name 'daprd' | Stop-Process"
            },
            "linux": {
                "command": "kill -9 $(ps aux | grep daprd | awk '{print $2}')"
            },
            "osx": {
                "command": "ps aux | grep daprd|grep -v grep | awk '{print $2}'|xargs kill -9"
            }
        },
        // dotnet build 
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/identity-service.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        // dotnet publish
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/identity-service.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        // dotnet watch 
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/identity-service.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn":"daprd-debug-identity-service"

        },
        // daprd-debug-identity-service
        {
            "appId": "identity-service",
            "appPort": 5000,
            "label": "daprd-debug-identity-service",
            "type": "daprd",
            // "dependsOn": "build",

        },
        // daprd-down-identity-service
        {
            "appId": "identity-service",
            "label": "daprd-down-identity-service",
            "type": "daprd-down"
        }
    ]
}