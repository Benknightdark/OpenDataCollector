    "version": "0.2.0",
    "configurations": [
        {
            "name": "identity-service with Dapr",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "watch",//daprd-debug-identity-service
            "program": "${workspaceFolder}/api-service/identity-service/bin/Debug/net6.0/identity-service.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "postDebugTask": "daprd-down-identity-service"
        },

    ],
    "compounds": [
        {
            "name": "Debug All",
            "preLaunchTask": "clear-all-daprd-processes",
            "configurations": [
                "identity-service with Dapr"
            ]
        }
    ]
}